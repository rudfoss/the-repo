{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"baseUrl": ".",

		"target": "ESNext",
		"moduleResolution": "node",
		
		"sourceMap": true,
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		
		"strict": true,
		"skipLibCheck": true,
		"downlevelIteration": true,
		"esModuleInterop": true
	},
	"exclude": ["node_modules"]
}